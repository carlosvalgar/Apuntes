import java.util.Scanner;

public class ArrayString {

	public static void main(String[] args) {
		String [] nombres = {"Sandra", "Aida", "Adrian", "Guillem", "Carlos", "Martí", "David", "Jesus", "Pau", "Alex", "Andreu"};
		System.out.print("Introduce el nombre a buscar: ");
		String nombreBuscar = "";
		int var_bool = 0;
		
		Scanner lector = new Scanner(System.in);
		nombreBuscar = lector.next();
		for(int i = 0; i < nombres.length; i++) {
			var_bool = nombreBuscar.compareToIgnoreCase(nombres[i]);
			System.out.println(var_bool == 0? nombreBuscar + " existe en la posición: " + i : nombreBuscar + " no existe en la posición: " + i);
		}
		
		for(int i = 0; i < nombres.length; i++) {
			if(nombreBuscar.equalsIgnoreCase(nombres[i])) {
				System.out.print("Encontrado");
			}
			else {
				System.out.print("No encontrado");
			}
		}		
	}
}
